{
    "manifest_version": 2,
    "name": "Gasta Menos",
    "description": "Cuantas horas tienes que trabajar para comprarte eso?",
    "version": "0.0.0.1",
    "author": "AlebrijeLab",
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_title": "DÃ­as de trabajo para comprar eso?"
    },
    "icons": { 
        "16": "images/icon16.png",
        "48": "images/icon48.png",
       "128": "images/icon128.png" },
    "permissions": [
        "storage"
    ],
    "options_ui": {
    "page": "options.html",
    "open_in_tab": false
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "scripts/content.js"
            ],
            "run_at": "document_end"
        }
    ]
}